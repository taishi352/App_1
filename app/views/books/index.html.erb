<!DOCTYPE html>
<html>
  <head>
    <title>WebCampBackendNew</title>
  </head>

  <body>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>

    <h1>Books</h1>

    

    <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th> </th>
      </tr>
      
      <% @books.each do |book| %>

      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>

        <td><%=link_to "Show", book_path(book.id) %></td>
        <td><%=link_to "Edit", edit_book_path(book.id) %></td>
        <td><%=link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>

      <% end %>

    </table>


    <h2>New book</h2>


	<%= form_for(@book) do |f| %>

    <% if @book.errors.any? %>
      <h4>Errors:</h4>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

		<h4>Title</h4>
		<%= f.text_field :title %>

		<h4>Body</h4>
		<%= f.text_area :body %>

		<%= f.submit 'Creat Book' %>

	<% end %>

  </body>
</html>